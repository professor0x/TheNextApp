<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/vidwall"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_online_videos"
    tools:context="com.threecognizant.technotrions.newapp.OnlineVideos">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/youtube"
        android:scaleType="fitXY"
        android:src="@drawable/youtube"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/netflix"
        android:layout_toStartOf="@+id/netflix" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/netflix"
        android:scaleType="fitXY"
        android:src="@drawable/netflix"
        android:layout_alignTop="@+id/youtube"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
