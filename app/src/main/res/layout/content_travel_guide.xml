<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_travel_guide"
    tools:context="com.threecognizant.technotrions.newapp.TravelGuide">

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="fitXY"
        android:id="@+id/touristeye"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/touristeye" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/tripadvisor"
        android:scaleType="fitXY"
        android:src="@drawable/tripadvisor"
        android:layout_alignTop="@+id/touristeye"
        android:layout_toRightOf="@+id/touristeye"
        android:layout_toEndOf="@+id/touristeye" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/trivago"
        android:scaleType="fitXY"
        android:src="@drawable/trivago"
        android:layout_alignTop="@+id/tripadvisor"
        android:layout_toRightOf="@+id/tripadvisor"
        android:layout_toEndOf="@+id/tripadvisor" />
</RelativeLayout>
