<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"

    android:background="@drawable/backgroundgraphics"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".WhileTravelling"
    tools:showIn="@layout/activity_while_travelling">

    <ImageButton

        android:id="@+id/new1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/next1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/angrybirds" />

    <ImageButton

        android:id="@+id/next1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/new1"
        android:layout_toRightOf="@+id/new1"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/amazonkindle" />

    <ImageButton
        android:id="@+id/next2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/next1"
        android:layout_toRightOf="@+id/next1"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/gaana" />

    <ImageButton
        android:id="@+id/next3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/next2"
        android:layout_toEndOf="@+id/next2"
        android:layout_toRightOf="@+id/next2"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/chrome" />


    <ImageButton
        android:id="@+id/next4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/next3"
        android:layout_toRightOf="@+id/next3"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/whatsapp" />

    <ImageButton
        android:id="@+id/next5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/new1"
        android:layout_toEndOf="@+id/next4"
        android:layout_toRightOf="@+id/next4"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/flipkart" />

    <ImageButton
        android:id="@+id/next6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/next5"
        android:layout_toRightOf="@+id/next5"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/toi" />

    <ImageButton
        android:id="@+id/new2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/new1"
        android:layout_alignStart="@+id/new1"
        android:layout_below="@+id/new1"
        android:layout_marginTop="29dp"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/subwaysurfer" />

    <ImageButton
        android:id="@+id/new3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/next1"
        android:layout_alignStart="@+id/next1"
        android:layout_alignTop="@+id/new2"
        android:background="#f4f2e6"
        android:scaleType="fitXY"
        android:src="@drawable/twozerofoureight" />

    <ImageButton
        android:id="@+id/zombie"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/next2"
        android:layout_alignStart="@+id/next2"
        android:layout_alignTop="@+id/new3"
        android:background="#f4f2e6"
        android:scaleType="fitXY" />

</RelativeLayout>
