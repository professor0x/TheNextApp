<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/newswall"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_news" tools:context="com.threecognizant.technotrions.newapp.news">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/flipboard"
        android:scaleType="fitXY"
        android:src="@drawable/flipboard"
        android:layout_above="@+id/ecotimes"
        android:layout_toLeftOf="@+id/playnews"
        android:layout_toStartOf="@+id/playnews" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/bbbcnews"
        android:scaleType="fitXY"
        android:src="@drawable/bbcnews"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/playnews"
        android:layout_toEndOf="@+id/playnews" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/playnews"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/flipboard"
        android:layout_centerHorizontal="true"
        android:src="@drawable/googleplaynewsstand" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/toi"
        android:scaleType="fitXY"
        android:src="@drawable/toi"
        android:layout_below="@+id/flipboard"
        android:layout_toLeftOf="@+id/hindu"
        android:layout_toStartOf="@+id/hindu" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/hindu"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/toi"
        android:layout_alignLeft="@+id/playnews"
        android:layout_alignStart="@+id/playnews"
        android:src="@drawable/thehindu" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ecotimes"
        android:scaleType="fitXY"
        android:src="@drawable/economictimes"
        android:layout_below="@+id/bbbcnews"
        android:layout_toRightOf="@+id/hindu"
        android:layout_toEndOf="@+id/hindu" />
</RelativeLayout>
