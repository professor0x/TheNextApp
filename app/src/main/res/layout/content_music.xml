<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/musicwall"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_music" tools:context="com.threecognizant.technotrions.newapp.music">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/wynk"
        android:scaleType="fitXY"
        android:src="@drawable/wynk"
        android:layout_alignTop="@+id/gaana"
        android:layout_toLeftOf="@+id/gaana"
        android:layout_toStartOf="@+id/gaana" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/gaana"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gaana" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/saavn"
        android:scaleType="fitXY"
        android:src="@drawable/saavn"
        android:layout_alignTop="@+id/gaana"
        android:layout_toRightOf="@+id/gaana"
        android:layout_toEndOf="@+id/gaana" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/music"
        android:scaleType="fitXY"
        android:src="@drawable/googleplaymusic"
        android:layout_below="@+id/wynk"
        android:layout_alignLeft="@+id/wynk"
        android:layout_alignStart="@+id/wynk" />
</RelativeLayout>
