<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_online_shopping"
    tools:context="com.threecognizant.technotrions.newapp.OnlineShopping">

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/amazon"
        android:scaleType="fitXY"
        android:src="@drawable/amazon"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/myntra"
        android:layout_toStartOf="@+id/myntra" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/myntra"
        android:scaleType="fitXY"
        android:src="@drawable/myntra"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/flipkart"
        android:layout_toStartOf="@+id/flipkart" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/flipkart"
        android:scaleType="fitXY"
        android:src="@drawable/flipkart"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/jabong"
        android:layout_toStartOf="@+id/jabong" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/jabong"
        android:scaleType="fitXY"
        android:src="@drawable/jabong"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/snapdeal"
        android:scaleType="fitXY"
        android:src="@drawable/snapdeal"
        android:layout_below="@+id/amazon"
        android:layout_alignLeft="@+id/amazon"
        android:layout_alignStart="@+id/amazon" />
</RelativeLayout>
