<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/gamescricket"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_games" tools:context="com.threecognizant.technotrions.newapp.Games">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/angrybirds"
        android:scaleType="fitXY"
        android:src="@drawable/angrybirds"
        android:layout_alignTop="@+id/subwaysurfer"
        android:layout_toLeftOf="@+id/jetpackjoyride"
        android:layout_toStartOf="@+id/jetpackjoyride" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/subwaysurfer"
        android:scaleType="fitXY"
        android:src="@drawable/subwaysurfer"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/jetpackjoyride"
        android:layout_toEndOf="@+id/jetpackjoyride" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/fruitninja"
        android:scaleType="fitXY"
        android:src="@drawable/fruitninja"
        android:layout_below="@+id/angrybirds"
        android:layout_alignLeft="@+id/angrybirds"
        android:layout_alignStart="@+id/angrybirds" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jetpackjoyride"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/fruitninja"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jetpackjoyride" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/minimilitia"
        android:scaleType="fitXY"
        android:src="@drawable/minimilitia"
        android:layout_below="@+id/subwaysurfer"
        android:layout_toRightOf="@+id/jetpackjoyride"
        android:layout_toEndOf="@+id/jetpackjoyride" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/angrybirdsrio"
        android:scaleType="fitXY"
        android:layout_above="@+id/fruitninja"
        android:layout_alignRight="@+id/jetpackjoyride"
        android:layout_alignEnd="@+id/jetpackjoyride"
        android:src="@drawable/angrybirdsrio" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/twozerofoureight"
        android:scaleType="fitXY"
        android:src="@drawable/twozerofoureight"
        android:layout_below="@+id/fruitninja"
        android:layout_alignLeft="@+id/fruitninja"
        android:layout_alignStart="@+id/fruitninja" />
</RelativeLayout>
