<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamescricket"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.threecognizant.technotrions.newapp.Games"
    tools:showIn="@layout/activity_games">

    <ImageButton
        android:id="@+id/angrybirds"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/subwaysurfer"
        android:scaleType="fitXY"
        android:src="@drawable/angrybirds" />

    <ImageButton
        android:id="@+id/subwaysurfer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/angrybirds"
        android:layout_toRightOf="@+id/angrybirds"
        android:scaleType="fitXY"
        android:src="@drawable/subwaysurfer" />

    <ImageButton
        android:id="@+id/twozerofoureight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/subwaysurfer"
        android:layout_toEndOf="@+id/subwaysurfer"
        android:layout_toRightOf="@+id/subwaysurfer"
        android:scaleType="fitXY"
        android:src="@drawable/twozerofoureight" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/subwaysurfer"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/update" />
</RelativeLayout>
