<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_ticketing" tools:context="com.threecognizant.technotrions.newapp.Ticketing">

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/makemytrip"
        android:scaleType="fitXY"
        android:src="@drawable/makemytrip"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/yatra"
        android:layout_toStartOf="@+id/yatra" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/yatra"
        android:scaleType="fitXY"
        android:src="@drawable/yatra"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/goibibo"
        android:layout_toStartOf="@+id/goibibo" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/goibibo"
        android:scaleType="fitXY"
        android:src="@drawable/goibibo"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/cleartrip"
        android:layout_toStartOf="@+id/cleartrip" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/cleartrip"
        android:scaleType="fitXY"
        android:src="@drawable/cleartrip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/irctc"
        android:scaleType="fitXY"
        android:src="@drawable/irctc"
        android:layout_below="@+id/yatra"
        android:layout_toRightOf="@+id/redbus"
        android:layout_toEndOf="@+id/redbus" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/redbus"
        android:scaleType="fitXY"
        android:src="@drawable/redbus"
        android:layout_below="@+id/makemytrip"
        android:layout_alignLeft="@+id/makemytrip"
        android:layout_alignStart="@+id/makemytrip" />
</RelativeLayout>
