<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_before_travelling"
    tools:context="com.threecognizant.technotrions.newapp.BeforeTravelling">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checklists"
        android:id="@+id/CL"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Here are some cool checklist apps if you want to make checklists"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/CL"
        android:layout_toRightOf="@+id/CL"
        android:layout_toEndOf="@+id/CL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="online shopping"
        android:id="@+id/OS"
        android:layout_below="@+id/CL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/CL"
        android:layout_alignEnd="@+id/CL" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price Compare"
        android:id="@+id/PC"
        android:layout_below="@+id/OS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/OS"
        android:layout_alignEnd="@+id/OS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout Places"
        android:id="@+id/CP"
        android:layout_below="@+id/PC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticketing"
        android:id="@+id/Tkt"
        android:layout_below="@+id/CP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel"
        android:id="@+id/Hot"
        android:layout_below="@+id/Tkt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Tkt"
        android:layout_alignEnd="@+id/Tkt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Travel"
        android:id="@+id/LT"
        android:layout_below="@+id/Hot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Hot"
        android:layout_alignEnd="@+id/Hot" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:id="@+id/wthr"
        android:layout_below="@+id/LT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/LT"
        android:layout_alignEnd="@+id/LT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Shopping Apps, just in case you want something"
        android:id="@+id/textView2"
        android:layout_above="@+id/PC"
        android:layout_toRightOf="@+id/OS"
        android:layout_toEndOf="@+id/OS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Campare prices of the products before purchasing them to get the best price"
        android:id="@+id/textView3"
        android:layout_above="@+id/CP"
        android:layout_toRightOf="@+id/PC"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Checkout Different places and traveller&apos;s reviews"
        android:id="@+id/textView4"
        android:layout_above="@+id/Tkt"
        android:layout_toRightOf="@+id/CP"
        android:layout_toEndOf="@+id/CP" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Get your tickets for the journey"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/Tkt"
        android:layout_toRightOf="@+id/Tkt"
        android:layout_toEndOf="@+id/Tkt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Book the best hotels in the best deals"
        android:id="@+id/textView6"
        android:layout_above="@+id/LT"
        android:layout_toRightOf="@+id/Hot"
        android:layout_toEndOf="@+id/Hot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No need to bagrain for local travel now"
        android:id="@+id/textView7"
        android:layout_above="@+id/wthr"
        android:layout_toRightOf="@+id/LT"
        android:layout_toEndOf="@+id/LT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Check the weather before going to a place"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/wthr"
        android:layout_toRightOf="@+id/wthr"
        android:layout_toEndOf="@+id/wthr" />
</RelativeLayout>
