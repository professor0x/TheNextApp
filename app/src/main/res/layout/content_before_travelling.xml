<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.threecognizant.technotrions.newapp.BeforeTravelling"
    tools:showIn="@layout/activity_before_travelling">

    <ImageButton

        android:id="@+id/ola"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/makemytrip"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/ola" />

    <ImageButton

        android:id="@+id/makemytrip"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ola"
        android:layout_toRightOf="@+id/ola"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/makemytrip" />

    <ImageButton
        android:id="@+id/oyo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/makemytrip"
        android:layout_toRightOf="@+id/makemytrip"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/oyo" />

    <ImageButton
        android:id="@+id/packpoint"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/oyo"
        android:layout_toEndOf="@+id/oyo"
        android:layout_toRightOf="@+id/oyo"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/packpoint" />

    <ImageButton
        android:id="@+id/tripadvisor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/packpoint"
        android:layout_toRightOf="@+id/packpoint"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/tripadvisor" />

    <ImageButton
        android:id="@+id/flipkart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tripadvisor"
        android:layout_toRightOf="@+id/tripadvisor"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/flipkart" />

    <ImageButton
        android:id="@+id/mysmartprice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/flipkart"
        android:layout_toRightOf="@+id/flipkart"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/mysmartprice" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ola"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/update" />


</RelativeLayout>
