<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_check_list" tools:context="com.threecognizant.technotrions.newapp.CheckList">

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/packpoint"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/packpoint" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/Evernote"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/packpoint"
        android:layout_toRightOf="@+id/packpoint"
        android:layout_toEndOf="@+id/packpoint"
        android:src="@drawable/evernote" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/anydo"
        android:scaleType="fitXY"
        android:src="@drawable/anydo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Evernote"
        android:layout_toEndOf="@+id/Evernote" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/ToDoList"
        android:scaleType="fitXY"
        android:src="@drawable/todolist"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/anydo"
        android:layout_toEndOf="@+id/anydo" />



    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/Todoist"
        android:scaleType="fitXY"
        android:src="@drawable/todoist"
        android:layout_below="@+id/packpoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
